{
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "browser": false,
    "node": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "jest": true,
    "expect": true,
    "afterEach": true,
    "pit": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": [2, "global"],
    "camelcase": 2,
    "curly": 0,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-in-brackets": [0, "never"],
    "space-infix-ops": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "react/jsx-uses-react": 2,
    "react/react-in-jsx-scope": 2
  }
}
